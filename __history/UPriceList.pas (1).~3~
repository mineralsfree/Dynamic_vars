unit UPriceList;

interface
uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, Vcl.Grids, Vcl.StdCtrls;
 type
  PricelistINF = record
   orderNum: string[10];
   orderDate:TDateTime;
   cutomerReq:string[12];
   end;
   PriceListADR=^TSP3;
    TSP3= record
    INF: PricelistINF;
    ADR: PriceListADR;
    end;




  implementation
   procedure Writepricelist();
   var
   Temp:PricelistADR;
   Info:PricelistINF;
   Head:PriceListADR;
   TInfo:PricelistINF;
   f: file of PriceListINF;
   begin
   Assign(f,'Pricelist');
   Reset(f);
    Head^.ADR:=nil;
    temp:=Head;

   while not(Eof) do
   begin
     read(f,TInfo);
     new(Temp^.adr);
     Temp:=Temp^.ADR;
     Temp.ADR:=nil;
     temp.INF:=TInfo;
   end;
   Close(f);
   end;
   procedure readPriceList();
   begin

   end;

end.
